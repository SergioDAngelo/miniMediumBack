{
  "compilerOptions": {
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "baseUrl": "./src",
    "rootDir": "./",
  },
  "include": ["src/**/*",
  "node_modules/@prisma/client", "src/index.ts"]
}

